[color]
	ui = auto
[user]
	name = Hans Olaf Borch
	email = hansolaf@gmail.com
[alias]
	lg = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --graph
	co = checkout
	amend = commit --amend --no-edit
	lga = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --graph --all
[push]
	default = simple
[core]
	excludesfile = ~/dotfiles/.global-gitignore
[credential]
	helper = store
